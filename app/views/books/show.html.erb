<div class="container">
  <div class="row no-gutters">
    <div class="col-md-3 col-sm-6 m-3 mx-sm-auto">
      <%= render "users/user_info" ,user: @user %>
    </div>
    <div class="col m-5">
      <h2>Book detail</h2>
      <table class="table">
        <thead>
          <tr>
            <th>user</th>
            <th>title</th>
            <th>body</th>
            <% if @book.user.id == current_user.id %>
              <th></th>
              <th></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
              <%= link_to user_path(@book.user.id) do %>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book.id),class: "btn btn-sm btn-info" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" =>"Are you sure?",class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>