<div class="container">
  <div class="row no-gutters">
    <div class="col-md-3 col-sm-6 m-3 mx-sm-auto">
      <%= render "users/user_info" ,user: @user %>
    </div>
    <div class="col m-5">
      <h2>Book List</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>body</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= image_tag book.user.get_profile_image(100,100) %><br>
                <%= link_to user_path(book.user.id) do %>
                  <%= book.user.name %>
                <% end %>
              </td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td><%= link_to "show",book_path(book.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>