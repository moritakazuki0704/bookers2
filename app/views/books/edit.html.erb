<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h2 class="card-header">Book Edit</h2>
      <div class="form-body p-4">
        <%= form_with model: @book,url: book_path(@book.id),method: :patch do |f| %>
          <li class="field list-group-item">
            <%= f.label :title %><br />
            <%= f.text_field :title, autofocus: true,class: "form-control" %>
          </li>

          <li class="field list-group-item mb-4">
            <%= f.label :body %><br />
            <%= f.text_area :body,autofocus: true,rows: "3" ,class: "form-control" %>
          </li>

          <div class="actions card-footer pb-2">
            <%= f.submit "Update book",class: "btn btn-lg btn-block btn-info" %>
            <%= link_to "show",book_path(@book.id), class: "pr-3" %>
            / <%= link_to "back",books_path,class: "pl-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>