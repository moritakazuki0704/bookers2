<div class="container">
  <div class="card w-75 mx-auto mt-3 shadow-lg">
    <h2 class="card-header">User info</h2>
    <div class="card-body">
      <div class="row no-gutters list-group list-group-flush">
          <%= form_with model: @book,url: book_path(@book.id),method: :patch do |f| %>
            <li class="list-group-item">
              <%= f.label :title %><br />
              <%= f.text_field :title, autofocus: true, autocomplete: "title",class: "form-control" %>
            </li>

            <li class="list-group-item">
              <%= f.label :body %><br />
              <%= f.text_area :body,autofocus: true,rows: "3" ,autocomplete: "body",class: "form-control" %>
            </li>

            <div class="card-footer">
              <%= f.submit "Update book" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>