<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h2 class="card-header">User info</h2>
      <div class="form-body p-4">
        <%= form_with model: @user,url: user_path(@user.id),method: :patch do |f| %>
          <%= render 'devise/shared/error_messages', resource: @user %>
          <li class="field list-group-item">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name",class: "form-control" %>
          </li>

          <li class="field list-group-item">
            <%= f.label :profile_image %><br />
            <%= f.file_field :profile_image,accept: "image/*",class: "form-control-file" %>
          </li>

          <li class="field list-group-item mb-4">
            <%= f.label :introduction %><br />
            <%= f.text_area :introduction,autofocus: true,rows: "3",class: "form-control" %>
          </li>

          <div class="actions card-footer pb-2">
            <%= f.submit "Update User",class: "btn btn-lg btn-block btn-info" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>