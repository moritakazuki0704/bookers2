<div class="container">
  <div class="row no-gutters">
    <div class="col-md-3 col-sm-6 m-3 mx-sm-auto">
      <%= render "user_info" ,user: @user%>
    </div>
    <div class="col m-5">
      <h2>User List</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "show",user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>