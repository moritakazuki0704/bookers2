<div class="container">
  <div class="row no-gutters">
    <div class="col-md-3 m-3 mx-sm-auto">
      <%= render "user_info" ,user: @user %>
    </div>
    <div class="col-md-8 offset-md-1 m-3">
      <h2>Books</h2>
      <table class = "table">
        <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>body</th>
          </tr>
        </thead>
        <tbody>
          <% @user.books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>