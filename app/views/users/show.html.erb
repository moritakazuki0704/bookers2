<h2>User info</h2>
<%= image_tag @user.get_profile_image(100,100) %>
<hr>
<p>name:<%= @user.name %></p>
<p>introduction:<%= @user.introduction %></p>
<%= link_to edit_user_path do %>
  <button><i class="fas fa-cog"></i></button>
<% end %>
<hr>
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :body %>
  <%= f.submit 'Create book' %>
<% end %>